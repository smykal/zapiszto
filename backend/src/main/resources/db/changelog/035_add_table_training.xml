<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTable-training" author="smykalm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="training" schemaName="public"/>
            </not>
        </preConditions>

        <createTable tableName="training">
            <column name="id" type="serial4">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="workbooks_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>


        </createTable>
        <addForeignKeyConstraint baseTableName="workbook_02"
                                 baseColumnNames="workbook_id"
                                 constraintName="fk_workbook_id"
                                 referencedTableName="workbooks"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
