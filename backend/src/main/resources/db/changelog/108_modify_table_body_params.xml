<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="change-user-id-type-to-int8" author="your_name">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="body_params"/>
            <columnExists tableName="body_params" columnName="user_id"/>
        </preConditions>
        <sql>
            ALTER TABLE public.body_params ALTER COLUMN user_id TYPE int8 USING user_id::int8;
        </sql>

    </changeSet>

</databaseChangeLog>
